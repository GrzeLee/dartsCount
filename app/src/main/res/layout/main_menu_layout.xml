<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#333333">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/background_"
        android:layout_width="546dp"
        android:layout_height="793dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-74dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-67dp"
        android:background="@drawable/background_image"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_mode_1"
        android:layout_width="320dp"
        android:layout_height="91dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/firstGameButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_buttons"
            android:text="@string/game_mode_1_title"
            android:textAppearance="@style/menu_button_text"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

        </androidx.appcompat.widget.AppCompatButton>

        <View
            android:id="@+id/vector"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vector"
            android:elevation="4dp"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/firstGameButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/firstGameButton"
            app:layout_constraintTop_toTopOf="@+id/firstGameButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_mode_2"
        android:layout_width="320dp"
        android:layout_height="91dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:layout_marginVertical="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_mode_1"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/secondGameButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_buttons"
            android:text="@string/game_mode_2_title"
            android:textAppearance="@style/menu_button_text"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="24dp">

        </androidx.appcompat.widget.AppCompatButton>

        <View
            android:id="@+id/vector2"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vector"
            android:elevation="4dp"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/secondGameButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/secondGameButton"
            app:layout_constraintTop_toTopOf="@+id/secondGameButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_mode_3"
        android:layout_width="320dp"
        android:layout_height="91dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:layout_marginVertical="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_mode_2"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/thirdGameButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_buttons"
            android:text="@string/game_mode_3_title"
            android:textAppearance="@style/menu_button_text"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="24dp">

        </androidx.appcompat.widget.AppCompatButton>

        <View
            android:id="@+id/vector4"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vector"
            android:elevation="4dp"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/thirdGameButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/thirdGameButton"
            app:layout_constraintTop_toTopOf="@+id/thirdGameButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/best_score_view"
        android:layout_width="320dp"
        android:layout_height="91dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:layout_marginVertical="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_mode_3"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/best_score_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_buttons"
            android:text="@string/best_score"
            android:textAppearance="@style/menu_button_text"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="24dp">

        </androidx.appcompat.widget.AppCompatButton>

        <View
            android:id="@+id/vector3"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vector"
            android:elevation="4dp"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/best_score_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/best_score_view"
            app:layout_constraintTop_toTopOf="@+id/best_score_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_title"
        android:textAppearance="@style/app_title"
        android:gravity="center_horizontal|center_vertical"
        tools:ignore="MissingConstraints"
        />





</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>